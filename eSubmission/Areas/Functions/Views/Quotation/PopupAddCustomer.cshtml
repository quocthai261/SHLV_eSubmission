<script>

    function onButtonSaveAddCustomerClicked() {
        var modal = document.getElementById("popupAddCustomer");
        modal.classList.remove("show", "in");
        modal.style.display = "none";

        //var _00019 = await GetMesssageAsync('00019', '@Url.Action("GetMesssageAsync", "Common", new { area = "" })');
        notify("Cập nhật dữ liệu thành công", "success");
    }

    function onButtonCloseAddCustomerClicked() {
        var modal = document.getElementById("popupAddCustomer");
        modal.classList.remove("show", "in");
        modal.style.display = "none";
    }

</script>